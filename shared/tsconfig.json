/* /shared/tsconfig.json */

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "composite": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
