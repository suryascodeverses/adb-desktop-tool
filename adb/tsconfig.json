{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],

    "allowJs": true,
    "typeRoots": ["./src/types", "../shared/types", "./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
