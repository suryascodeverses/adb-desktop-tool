{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@adb/core": ["../adb/dist"]
    },
    "allowJs": true,
    "typeRoots": ["../shared/types", "./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
